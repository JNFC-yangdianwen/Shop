<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_recharge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.main.shop.Activity.RechargeActivity">
<LinearLayout
    android:orientation="horizontal"
    android:background="@color/titleColor"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_Height">
    <ImageView
        android:src="@mipmap/left_arrow"
        android:id="@+id/left_back"
        android:padding="4dp"
        android:layout_width="30dp"
        android:layout_height="match_parent"/>
<TextView
    android:gravity="center"
    android:textSize="@dimen/titleSize"
    android:textColor="@color/white"
    android:text="充值"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>
</LinearLayout>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <TextView
        android:layout_marginLeft="8dp"
        android:text="充值金额"
        android:textSize="@dimen/titleSize"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <EditText
            android:textSize="25sp"
            android:layout_marginLeft="8dp"
            android:hint="请输入充值金额"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:text="元"
            android:textSize="@dimen/titleSize"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </RelativeLayout>
</LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <TextView
            android:layout_marginLeft="8dp"
            android:textSize="@dimen/titleSize"
            android:text="充值方式"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:layout_marginLeft="8dp"
                android:textSize="20sp"
                android:text="佣金支付"
                android:id="@+id/brokerage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <ImageView
                android:src="@mipmap/circle"
                android:layout_alignParentRight="true"
                android:id="@+id/iv_brokerage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:layout_marginLeft="8dp"
                android:textSize="20sp"
                android:text="支付宝支付"
                android:id="@+id/alipay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <ImageView
                android:src="@mipmap/circle"
                android:layout_alignParentRight="true"
                android:id="@+id/iv_alipay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:layout_marginLeft="8dp"
                android:textSize="20sp"
                android:text="微信支付"
                android:id="@+id/wechat_Pay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <ImageView
                android:src="@mipmap/circle"
                android:layout_alignParentRight="true"
                android:id="@+id/iv_wechatPay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp">
            <TextView
                android:layout_marginLeft="8dp"
                android:textSize="20sp"
                android:text="银联支付"
                android:id="@+id/bankPay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ImageView
                android:src="@mipmap/circle"
                android:layout_alignParentRight="true"
                android:id="@+id/iv_bankPay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/l_sure"
            android:background="@color/titleColor"
            android:layout_centerInParent="true"
            android:layout_width="200dp"
            android:layout_height="25dp">
            <TextView
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="确认"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
