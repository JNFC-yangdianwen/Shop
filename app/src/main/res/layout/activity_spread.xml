<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:background="@drawable/qianbao"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <TextView
                android:id="@+id/recharge"
                android:textSize="20sp"
                android:text="充值"
                android:padding="8dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <TextView
                android:textSize="@dimen/titleSize"
                android:text="我的推广"
                android:gravity="center"
                android:layout_width="250dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/detail"
                android:text="明细"
                android:padding="6dp"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </RelativeLayout>
    </LinearLayout>
    <Space
        android:background="#2ac9a2a2"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="45dp">
<TextView
    android:padding="4dp"
    android:textSize="18sp"
    android:gravity="center|left"
    android:text="我的上级"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"/>
        <Space
            android:layout_width="150dp"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/et_inviteNum"
            android:hint="邀请码"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:textColor="#e25454"
            android:textSize="20sp"
            android:gravity="center"
            android:text="确认"
            android:id="@+id/tv_sureNum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="45dp">
<TextView
    android:id="@+id/tv_Super"
    android:padding="4dp"
    android:textSize="18sp"
    android:gravity="center|left"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:text="我的分享"
            android:padding="4dp"
            android:textSize="18sp"
            android:gravity="center|left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:text="一级成员"
            android:padding="4dp"
            android:textSize="18sp"
            android:gravity="center|left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_oneLevel"
            android:gravity="center"
            android:text="1"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
        <TextView
            android:gravity="center"
            android:text="佣金："
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:gravity="center"
            android:text="1元"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:text="二级成员"
            android:padding="4dp"
            android:textSize="18sp"
            android:gravity="center|left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_secondLevel"
            android:gravity="center"
            android:text="（成为会员后可能有佣金）"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
        <TextView
            android:gravity="center"
            android:text="佣金："
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:gravity="center"
            android:text="1元"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:text="三级成员"
            android:padding="4dp"
            android:textSize="18sp"
            android:gravity="center|left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_thirdLevel"
            android:gravity="center"
            android:text="（成为会员后可能有佣金）"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
        <TextView
            android:gravity="center"
            android:text="佣金："
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:gravity="center"
            android:text="1元"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>